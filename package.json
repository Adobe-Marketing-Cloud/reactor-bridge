{
  "name": "@reactor/extension-support-bridge",
  "version": "6.0.0-alpha.3",
  "description": "Communication API between Lens and Reactor extensions iframes.",
  "author": {
    "name": "DTM",
    "email": "DTM-Engineering@adobe.com"
  },
  "repository": {
    "type": "git",
    "url": "git@git.corp.adobe.com:reactor/extension-support-bridge.git"
  },
  "publishConfig": {
    "registry": "https://artifactory.corp.adobe.com/artifactory/api/npm/npm-mcps-release-local"
  },
  "scripts": {
    "build:child": "webpack --config webpack.child.config.js",
    "build:parent": "babel src --out-dir lib --ignore __tests__",
    "build": "npm-run-all --parallel build-child build-parent",
    "build:watch": "npm-run-all --parallel 'build:child -- --watch' 'build:parent -- --watch'",
    "test": "karma start",
    "sandbox": "./sandbox/scripts/run.js",
    "prepublish": "npm run build"
  },
  "files": [
    "dist",
    "lib"
  ],
  "main": "./lib/parent.js",
  "dependencies": {
    "domready": "^1.0.8",
    "layout-observer": "^0.1.0",
    "native-promise-only-ponyfill": "^1.0.1",
    "once": "^1.4.0",
    "penpal": "^1.0.2"
  },
  "devDependencies": {
    "async": "^2.1.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "connect": "^3.5.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-webpack": "^1.8.0",
    "serve-static": "^1.11.1",
    "webpack": "^1.13.2"
  }
}
